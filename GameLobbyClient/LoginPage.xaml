<Page x:Class="GameLobbyClient.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameLobbyClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <!-- Login Box that handles username input -->
        <TextBox Name="LoginBox" HorizontalAlignment="Center" Margin="0,140,0,0" TextWrapping="Wrap" Text="Enter username" VerticalAlignment="Top" Width="158" Height="21" KeyDown="LoginBox_KeyDown"/>
        <!-- Login button moves to next page -->
        <Button Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,271,0,0" VerticalAlignment="Top" Height="38" Width="106" Click="LoginButton_Click"/>
        <!-- For App title, rename to anything we want final to be -->
        <TextBlock Name="TitleBox" HorizontalAlignment="Center" Margin="0,37,0,0" FontSize="30" TextWrapping="Wrap" Text="Gaming Lobby" VerticalAlignment="Top" Height="42" Width="196"/>
    </Grid>
</Page>
